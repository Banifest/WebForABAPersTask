<mvc:View
        controllerName="sap.ui.hw07.controller.PhonePanel"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
    <Panel
            headerText="{i18n>phonePanelTitle}"
            class="sapUiResponsiveMargin"
            width="auto" >
        <content>
            <List
                    headerText="{i18n>phonePanelTitle}"
                    class="sapUiResponsiveMargin"
                    width="auto"
                    items="{path: '/photos' }" >
                <items>
                    <StandardListItem
                        title="{Name}"
                        counter="{Id}"
                    />
                </items>
            </List>
        </content>
    </Panel>
</mvc:View>